<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivCover"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.45"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/img_book_cover"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.55"
            android:orientation="vertical"
            android:padding="5dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">
            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="Метро 2035"/>
            <TextView
                android:id="@+id/tvAuthor"
                style="@style/StoreAccentTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                tools:text="Дмитрий Глуховский"/>
            <TextView
                android:id="@+id/tvCategory"
                style="@style/StoreAccentTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                tools:text="Фантастика"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_star"/>
                    <TextView
                        android:id="@+id/tvRating"
                        style="@style/StoreAccentTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        tools:text="4.5"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvPrice"
                    style="@style/StoreAccentTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tvOldPrice"
                    android:layout_toStartOf="@+id/tvOldPrice"
                    android:textColor="#ff0a0e"
                    tools:ignore="RelativeOverlap"
                    tools:text="365.17 Р"/>
                <TextView
                    android:id="@+id/tvOldPrice"
                    style="@style/StoreAccentTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    tools:text="405.74 Р"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>