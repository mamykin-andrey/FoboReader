<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Splash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
    </style>

    <style name="DetailsListItemTitleStyle">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
    </style>

    <style name="DetailsListItemTextStyle">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DetailsListCategoryTitleStyle">
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="DetailsBookTitleStyle" parent="DetailsListCategoryTitleStyle">
        <item name="android:textColor">#444</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailsTextNameStyle" parent="DetailsListItemTitleStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FloatingButtonStyle">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="SettingsButtonItemStyle">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="SettingsTextItemStyle">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SettingsTextSubItemStyle">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="FilesButtonUpStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="FilesTextCurrentDirStyle">
        <item name="android:ellipsize">start</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="StoreTextPromotionTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="StoreAccentTextStyle">
        <item name="android:textSize">12sp</item>
    </style>
</resources>