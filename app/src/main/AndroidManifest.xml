<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ru.mamykin.foboreader">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".ReaderApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name="ru.mamykin.foboreader.ui.RootActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Splash">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name="ru.mamykin.my_books.presentation.book_details.BookDetailsActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="ru.mamykin.read_book.presentation.ReadBookActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="ru.mamykin.settings.presentation.SettingsFragment"
            android:screenOrientation="portrait" />

    </application>
</manifest>