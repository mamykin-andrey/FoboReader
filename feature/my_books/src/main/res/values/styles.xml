<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DetailsListCategoryTitleStyle">
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="DetailsBookTitleStyle" parent="DetailsListCategoryTitleStyle">
        <item name="android:textColor">#444</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailsListItemTitleStyle">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
    </style>

    <style name="DetailsListItemTextStyle">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DetailsTextNameStyle" parent="DetailsListItemTitleStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>