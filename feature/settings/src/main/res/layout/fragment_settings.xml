<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="presentation.SettingsFragment">

    <include layout="@layout/view_toolbar" />

    <include layout="@layout/view_content_progress" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/sw_night_theme"
                style="@style/SettingsTextItemStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_padding_size_medium"
                android:text="@string/settings_night_theme"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/sw_bright_auto"
                style="@style/SettingsTextItemStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding_size_medium"
                android:text="@string/settings_brightness_auto"
                app:layout_constraintTop_toBottomOf="@id/sw_night_theme" />

            <ImageView
                android:id="@+id/iv_brightness_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_padding_size_small"
                android:contentDescription="@null"
                android:src="@drawable/ic_sun"
                app:layout_constraintLeft_toLeftOf="@id/sw_bright_auto"
                app:layout_constraintTop_toBottomOf="@id/sw_bright_auto" />

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/seek_bright"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/iv_brightness_icon"
                app:layout_constraintLeft_toRightOf="@id/iv_brightness_icon"
                app:layout_constraintRight_toRightOf="@id/sw_bright_auto"
                app:layout_constraintTop_toTopOf="@id/iv_brightness_icon" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_translation_color"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_padding_size_medium"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/margin_padding_size_medium"
                app:layout_constraintBottom_toTopOf="@id/barrier_text_size"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_brightness_icon">

                <TextView
                    android:id="@+id/tv_translation_color_title"
                    style="@style/SettingsTextItemStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_translate_color_title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/iv_translation_color"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_translation_color_subtitle"
                    style="@style/SettingsTextSubItemStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_padding_size_micro"
                    android:text="@string/settings_translate_color_description"
                    app:layout_constraintLeft_toLeftOf="@id/tv_translation_color_title"
                    app:layout_constraintRight_toRightOf="@id/tv_translation_color_title"
                    app:layout_constraintTop_toBottomOf="@id/tv_translation_color_title" />

                <ImageView
                    android:id="@+id/iv_translation_color"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_translate_color"
                    app:layout_constraintBottom_toBottomOf="@id/tv_translation_color_subtitle"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_translation_color_title" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="top"
                app:constraint_referenced_ids="tv_text_size_title,btn_text_size_minus,tv_text_size,btn_text_size_plus" />

            <TextView
                android:id="@+id/tv_text_size_title"
                style="@style/SettingsTextItemStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding_size_medium"
                android:text="@string/settings_text_size"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/barrier_text_size" />

            <ImageButton
                android:id="@+id/btn_text_size_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_padding_size_small"
                android:background="@drawable/bg_text_size_button"
                android:contentDescription="@null"
                android:padding="@dimen/margin_padding_size_micro"
                android:src="@drawable/ic_minus"
                app:layout_constraintBottom_toBottomOf="@id/btn_text_size_plus"
                app:layout_constraintRight_toLeftOf="@id/tv_text_size"
                app:layout_constraintTop_toTopOf="@id/btn_text_size_plus" />

            <TextView
                android:id="@+id/tv_text_size"
                style="@style/SettingsTextItemStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_padding_size_small"
                app:layout_constraintBottom_toBottomOf="@id/btn_text_size_plus"
                app:layout_constraintRight_toLeftOf="@id/btn_text_size_plus"
                app:layout_constraintTop_toTopOf="@id/btn_text_size_plus"
                tools:text="16" />

            <ImageButton
                android:id="@+id/btn_text_size_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_padding_size_medium"
                android:background="@drawable/bg_text_size_button"
                android:contentDescription="@null"
                android:padding="@dimen/margin_padding_size_micro"
                android:src="@drawable/ic_plus"
                app:layout_constraintBottom_toBottomOf="@id/tv_text_size_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_text_size_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>